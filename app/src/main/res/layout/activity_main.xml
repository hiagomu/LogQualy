<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <EditText
        android:id="@+id/mainEmailEditTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainLogoImgView" />

    <EditText
        android:id="@+id/mainPassEditTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Senha"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/mainEmailEditTxt"
        app:layout_constraintStart_toStartOf="@+id/mainEmailEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/mainEmailEditTxt" />

    <Button
        android:id="@+id/mainLoginButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="LOG IN"
        android:textColor="#FFFFFF"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="@+id/mainPassEditTxt"
        app:layout_constraintStart_toStartOf="@+id/mainPassEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/mainPassEditTxt"
        app:rippleColor="#FFFFFF" />

    <ImageView
        android:id="@+id/mainLogoImgView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logotipo" />

    <TextView
        android:id="@+id/mainForgetPassTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Esqueceu sua senha"
        app:layout_constraintStart_toStartOf="@+id/mainLoginButton"
        app:layout_constraintTop_toBottomOf="@+id/mainLoginButton" />

    <TextView
        android:id="@+id/mainCreateAccTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Criar nova conta"
        app:layout_constraintEnd_toEndOf="@+id/mainLoginButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mainForgetPassTxt"
        app:layout_constraintTop_toBottomOf="@+id/mainLoginButton" />

</androidx.constraintlayout.widget.ConstraintLayout>