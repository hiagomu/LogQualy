<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FormProductActivity">

    <EditText
        android:id="@+id/titleFormProdEditTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:ems="10"
        android:hint="Produto"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/descFormProdEditTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:gravity="start"
        android:hint="Descrição do sinistro"
        android:inputType="textMultiLine|textPersonName"
        android:lines="4"
        app:layout_constraintEnd_toEndOf="@+id/titleFormProdEditTxt"
        app:layout_constraintStart_toStartOf="@+id/titleFormProdEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/titleFormProdEditTxt" />

    <EditText
        android:id="@+id/dateFormProdEditTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Data"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/descFormProdEditTxt"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/descFormProdEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/descFormProdEditTxt" />

    <Button
        android:id="@+id/saveFormProdButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Salvar"
        android:textColor="#FFFFFF"
        app:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photoFormPordImgView" />

    <ImageView
        android:id="@+id/photoFormPordImgView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/dateFormProdEditTxt"
        app:layout_constraintTop_toBottomOf="@+id/dateFormProdEditTxt"
        app:srcCompat="@drawable/ic_photo_foreground" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/photoFormPordImgView"
        app:layout_constraintStart_toEndOf="@+id/photoFormPordImgView"
        app:layout_constraintTop_toTopOf="@+id/photoFormPordImgView"
        app:layout_constraintVertical_bias="0.555" />

</androidx.constraintlayout.widget.ConstraintLayout>